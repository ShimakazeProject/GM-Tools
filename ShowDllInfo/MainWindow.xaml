<Window x:Class="ShowDllInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowDllInfo"
        mc:Ignorable="d" Background="#000" Foreground="#FFF"
        Title="MainWindow" Height="152" Width="564">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="选择文件" Margin="10" Click="Button_Click"/>
        <TextBox Grid.Row="1" x:Name="_tb" Margin="10" Background="Transparent" Foreground="White" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
