<core:CSWin x:Class="IniMaker.NamedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IniMaker"
        xmlns:core="url://GM.Tools/ctrls" TitleMinBtnVisibility="Collapsed"
        Background="#90000000" Foreground="White"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" 
        Title="命名" Height="200" Width="300">
    <core:CSWin.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFF"/>
            <Setter Property="CaretBrush" Value="#FFF"/>
        </Style>
    </core:CSWin.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <TextBlock Text="新名称" FontSize="18" Margin="10,0" VerticalAlignment="Center"/>
        <TextBox x:Name="newName" Margin="10" Grid.Row="1" TextChanged="newName_TextChanged"/>
        <core:CSButton Grid.Row="2" Content="确定" Click="CSButton_Click"/>
    </Grid>
</core:CSWin>
