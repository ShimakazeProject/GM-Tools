<core:CSWin  x:Class="GMTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMTools"
        xmlns:core ="url://GM.Tools/ctrls"
        mc:Ignorable="d" Background="#90000000" Foreground="White"
        Title="GMan Tools Manager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="测试"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Menu Background="Transparent">
            <core:CSMenuItem Header="设置"/>
        </Menu>

        <WrapPanel x:Name="_wp" Grid.Row="1"/>
    </Grid>
</core:CSWin>
